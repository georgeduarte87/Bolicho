@model IEnumerable<Bolicho.Models.Produto>

@{
    ViewData["Title"] = "Bolicho";
}

<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
        <h1 class="display-4 fst-italic">Te aprochega vivente!!!</h1>
        <p class="lead my-3">Aproveita agora as melhores pechinchas do bolicho mais bagual dos pampas.</p>
        <p class="lead mb-0"><a href="#" class="text-white fw-bold">Ver pechinchas</a></p>
    </div>
</div>


<div class="row mb-2">
    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <h3 class="mb-0">@Html.DisplayFor(modelItem => item.Nome)</h3>
                    <p class="card-text mb-auto">@Html.DisplayFor(modelItem => item.Descicao)</p>
                    <p><strong>@Html.DisplayFor(modelItem => item.Valor)</strong></p>
                    <a asp-action="Details" asp-controller="Produtos" asp-route-id="@item.Id" class="stretched-link">Detalhes</a>
                </div>
                <div class="col-auto d-none d-lg-block">
                    <svg class="bd-placeholder-img" width="200" height="270" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                </div>
            </div>
        </div>
     }
</div>
